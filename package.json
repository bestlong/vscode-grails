{
  "name": "vscode-grails",
  "displayName": "Grails for VSCode",
  "description": "Grails is a web application framework that uses the Groovy programming language. This extension provides Grails support for Visual Studio Code.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "grails",
    "groovy",
    "vscode"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bestlong/vscode-grails"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-grails.gotoDomain",
        "category": "Grails",
        "title": "Go To Domain"
      },
      {
        "command": "vscode-grails.gotoController",
        "category": "Grails",
        "title": "Go To Controller"
      },
      {
        "command": "vscode-grails.gotoService",
        "category": "Grails",
        "title": "Go To Service"
      },
      {
        "command": "vscode-grails.gotoView",
        "category": "Grails",
        "title": "Go To View"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "vscode-grails.gotoController",
          "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Service\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoDomain",
          "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$|.*Service\\.groovy$/)",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoService",
          "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Controller\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoView",
          "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$/)",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "vscode-grails.gotoController",
          "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Service\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoDomain",
          "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$|.*Service\\.groovy$/)",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoService",
          "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Controller\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoView",
          "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$/)",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "vscode-grails.gotoController",
          "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Service\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoDomain",
          "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$|.*Service\\.groovy$/)",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoService",
          "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Controller\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
          "group": "navigation"
        },
        {
          "command": "vscode-grails.gotoView",
          "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$/)",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
