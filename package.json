{
  "name": "vscode-grails",
  "displayName": "vscode-grails",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-grails.openDomain",
        "category": "Grails",
        "title": "Open Domain"
      },
      {
        "command": "vscode-grails.openController",
        "category": "Grails",
        "title": "Open Controller"
      },
      {
        "command": "vscode-grails.openService",
        "category": "Grails",
        "title": "Open Service"
      }
    ],
    "menus": {
        "editor/context": [
            {
                "command": "vscode-grails.openController",
                "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Service\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
                "group": "navigation"
            },
            {
                "command": "vscode-grails.openDomain",
                "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$|.*Service\\.groovy$/)",
                "group": "navigation"
            },
            {
                "command": "vscode-grails.openService",
                "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Controller\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
                "group": "navigation"
            }
        ],
        "editor/title": [
            {
                "command": "vscode-grails.openController",
                "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Service\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
                "group": "navigation"
            },
            {
                "command": "vscode-grails.openDomain",
                "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$|.*Service\\.groovy$/)",
                "group": "navigation"
            },
            {
                "command": "vscode-grails.openService",
                "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Controller\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
                "group": "navigation"
            }
        ],
        "editor/title/context": [
            {
                "command": "vscode-grails.openController",
                "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Service\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
                "group": "navigation"
            },
            {
                "command": "vscode-grails.openDomain",
                "when": "resourceExtname == .groovy && (resourceFilename =~ /.*Controller\\.groovy$|.*Service\\.groovy$/)",
                "group": "navigation"
            },
            {
                "command": "vscode-grails.openService",
                "when": "resourceExtname == .groovy && ( (resourceFilename =~ /.*Controller\\.groovy$/) || (resourcePath =~ /.*\\/domain\\/.*?\\/.*\\.groovy$/) )",
                "group": "navigation"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
